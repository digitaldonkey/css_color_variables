<div id="color-schema-ui" class="bg-dark clearfix">
  <div class="colors">
    {% for colorMachineName, colorHumanReadableName in colors %}
      <div class="{{ colorMachineName }}" >
        <button
          type="button"
          style="background-color: var(--{{ colorMachineName|replace({'_': '-',}) }});"
          data-color="{{ colorMachineName }}"
          class="btn btn-default">{{ colorHumanReadableName }}</button>
      </div>
    {% endfor %}
  </div>
  <div class="actions">
    <div class="row mr-0 ml-0">
      <button type="button" class="btn btn-small btn-success save col-6"><i class="fas fa-save" aria-hidden="true"></i>&nbsp;{{ 'Save'|t }}</button>
      <button type="button" class="btn btn-light btn-small cancel col-6"><i class="fas fa-times" aria-hidden="true"></i><span aria-hidden="false" class="hidden">{{ 'Cancel'|t }}</span></button>
    </div>
  </div>
</div>
